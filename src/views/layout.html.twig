<html>
<head>
	<link rel="stylesheet" href="/css/normalize.css"/>
	<link rel="stylesheet" href="/css/admin.css"/>
	<link rel="stylesheet" href="/css/colorpicker.css"/>
</head>
<body>
	<div class="wrapper">
		<div class="sidebar">
			<div class="sub-wrapper">
				{% block menu %}
					<div class="header">Меню</div>
					<table class="admin-menu">
						<tr><td><a href="/admin/projects" class="menu-item-link"><div>Проекты</div></a></td></tr>
						<tr><td><a href="/admin/project-types" class="menu-item-link"><div>Категории</div></a></td></tr>
						<tr><td><a href="/admin/reviews" class="menu-item-link"><div>Отзывы</div></a></td></tr>
						<tr><td><a href="/admin/pages" class="menu-item-link"><div>Страницы</div></a></td></tr>
					</table>
				{% endblock %}
			</div>
		</div>
		<div class="container">
			<div class="sub-wrapper">
				{% block content %}
				{% endblock %}
			</div>
		</div>
	</div>
    <script src='http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js'></script>
    <script src='/js/colorpicker.js'></script>
	
	<script>
	$(document).ready(function(){
	  $('#form_color').ColorPicker({
		onChange: function(hsb, hex, rgb) {
			$('#form_color').val('#'+hex);
		},
		onBeforeShow: function () {
			$(this).ColorPickerSetColor(this.value);
		}
	  })
	  .bind('keyup', function(){
		$(this).ColorPickerSetColor(this.value);
	  });
	});
	</script>
</body>
</html>