		.about .l-header__actions .order>a{background:{{color.hex}}}
		.about .l-header .logo-wrapper{background-color:{{color.hex}}}
		.about .l-section-home{
			background-image:-webkit-linear-gradient(transparent 0%, #232323 70%, #232323 100%),url("../img/about/bgs/bg-top.jpg");
			background-image:linear-gradient(transparent 0%, #232323 70%, #232323 100%),url("../img/about/bgs/bg-top.jpg");
			background-image:url("../img/about/bgs/bg-top.jpg");background-position:center;background-size:cover
		}
		.about .l-section-home .b-text-wrapper{background:rgba({{color.rgb.0}},{{color.rgb.1}},{{color.rgb.2}},0.8)}
		.about .l-section-home .b-text-wrapper.b-skew-top:before{border-bottom-color:rgba({{color.rgb.0}},{{color.rgb.1}},{{color.rgb.2}},0.8)}
		.about .l-section-home .b-text-wrapper.b-skew-bottom:after{border-top-color:rgba({{color.rgb.0}},{{color.rgb.1}},{{color.rgb.2}},0.8)}
