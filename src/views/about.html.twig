    <header class='l-header'>
      <div class='l-header__inner'>
        <a class='logo-wrapper small' href='/' id='logotype'>
          <h1 class='logotype'>
            <span class='active'>Best Quest</span>
            <span>Настоящие Игры</span>
          </h1>
        </a>
        <nav class='l-header__nav'>
          <ul class='l-header__menu'>
            <li class='item'>
              <a href="/">Проекты</a>
              <ul class='l-header__submenu js-slider-control'>
                {% for project_type in project_types %}
                  <li class='item'><a href="/?{{ project_type.name }}">{{ project_type.full_name }}</a></li>
                {% endfor %}
                <li class='item'><a href="/?excl">Эксклюзивный проект</a></li>
              </ul>
            <li class='item'>
              <a href="/about">О компании</a>
              <ul class='l-header__submenu'>
                <li class='item'><a href="/about#team">Команда</a></li>
                <li class='item'><a href="/about#clients">Клиенты</a></li>
              </ul>
            </li>
          </ul>
        </nav>
        <div class='l-header__actions'>
          <div class='phone'>(812) 574 65 12</div>
          <div class='phone'>(921) 976 38 76</div>
          <div class='l-header__email'><a href="mailto:info@best-quest.ru">info@best-quest.ru</a></div>
          <div class='social'>
            {% include 'social.html.twig' %}
          </div>
        </div>
      </div>
    </header>
    <main class='l-content'>
      <section class='l-section l-section-home'>
        <div class='b-text-wrapper b-skew b-skew-top b-skew-bottom'>
          <h1>Современные технологии тимбилдинга</h1>
        </div>
      </section>
      <section class='l-section l-section-order b-skew b-skew-top light'>
        <div class='b-text-wrapper'>
          <article>
            <h2 class='s-title'>О КОМПАНИИ</h2>
            <div class='column'>
              {% for one_text in left_text %}
				<p>{{one_text.text}}</p>
			  {% endfor %}
            </div>
			 <div class='column'>
              {% for one_text in right_text %}
				<p>{{one_text.text}}</p>
			  {% endfor %}
            </div>
          </article>
        </div>
      </section>
      <section class='l-section l-section-team b-skew b-skew-top dark' id='team'>
        <a name="team"></a><h2 class='s-title white'>Команда</h2>
        <div class='b-slider b-slider-team' id='projects'>
          <ul class='list'>
            {% for one_team in about_team %}
				<li class='item b-project'>
				  <div class='b-project__image--small' style='background-image: url(/img/about/team/{{one_team.photo}})'></div>
				  <div class='b-project__image' style='background-image: url(/img/about/team/{{one_team.photo}})'></div>
				  <div class='b-project__body'>
					<h3>{{one_team.name}}</h3>
					<strong class='position'>{{one_team.position}}</strong>
					<p>{{one_team.text}}</p>
				  </div>
				</li>
			{% endfor %}
          </ul>
          <div class='b-slider__next'>
            <svg enable-background='new 0 0 45.8 45.8' height='45px' space='preserve' version='1.1' viewbox='0 0 45.8 45.8' width='45px' x='0px' xmlns:xlink='http://www.w3.org/1999/xlink' xmlns='http://www.w3.org/2000/svg' y='0px'>
