		.about .l-section-narrow{background-image:url("../img/about/bgs/bg-narrow.jpg");background-position:0 -200px}
		.about .l-section-apply{background-image:url("../img/about/bgs/bg-apply.jpg");background-position:bottom left}
		.about input[type="button"],.about input[type="reset"],.about input[type="submit"],.about button,.about .s-button{background:{{color.hex}}}
