                <polygon fill='#FFFFFF' points='29.9,16.3 36.5,22.9 29.9,29.4   '></polygon>
              </g>
            </svg>
          </div>
          <div class='b-slider__prev'>
            <svg enable-background='new 0 0 45.8 45.8' height='45px' id='Layer_1' space='preserve' version='1.1' viewbox='0 0 45.8 45.8' width='45px' x='0px' xmlns:xlink='http://www.w3.org/1999/xlink' xmlns='http://www.w3.org/2000/svg' y='0px'>
              <g>
                <path d='M13.3,22.1h20.3c0.4,0,0.6,0.4,0.6,0.9c0,0.5-0.3,0.9-0.6,0.9H13.3c-0.4,0-0.6-0.4-0.6-0.9&#x000A;    C12.7,22.5,13,22.1,13.3,22.1z' fill='#FFFFFF'></path>
                <path d='M22.9,0c12.6,0,22.9,10.3,22.9,22.9S35.5,45.8,22.9,45.8C10.3,45.8,0,35.5,0,22.9S10.3,0,22.9,0z M22.9,44&#x000A;   C34.5,44,44,34.5,44,22.9c0-11.7-9.5-21.1-21.1-21.1c-11.7,0-21.1,9.5-21.1,21.1C1.7,34.5,11.2,44,22.9,44z' fill='#FFFFFF'></path>
                <polygon fill='#FFFFFF' points='15.8,29.5 9.2,22.9 15.8,16.3  '></polygon>
              </g>
            </svg>
          </div>
        </div>
      </section>
      <section class="l-section l-section-clients b-skew b-skew-top light" id="clients">
        <a name="clients"></a><h2 class="s-title">Клиенты</h2>
        <div class="b-clients">
          {% for one_partner in about_partners|batch(4) %}
		  <ul class="b-clients__list">
			{% for one_item in one_partner %}
				<li class="item">
				  <a href="{{one_item.href}}"><img width="{{one_item.size.0}}" height="{{one_item.size.1}}" src="/img/about/partners/{{one_item.img}}"></a>
				</li>
			{% endfor %}
		  </ul>
		  <br/><br/>
		  {% endfor %}
		<br/><br/>
        </div>
      </section>
    </main>
    <footer class='l-footer b-skew b-skew-top dark'>
      <div class='l-footer__inner'>
        <nav class='l-footer__nav'>
          <dl class='l-footer__menu'>
            <dt class='title'>Best Quest</dt>
            <dd class='item'><a href="/about#team">Команда</a></dd>
            <dd class='item'><a href="/about#clients">Клиенты</a></dd>
            <dd class='item'><a href="/about#partners">Партнеры</a></dd>
          </dl>
          <dl class='l-footer__menu'>
            <dt class='title'>Проекты</dt>
            {% for project_type in project_types %}
              <dd class='item'><a href="/?{{ project_type.name }}">{{ project_type.full_name }}</a></dd>
            {% endfor %}
            <dd class='item'><a href="/?excl">Эксклюзивный проект</a></dd>
          </dl>
          <dl class='l-footer__menu' id='contacts'>
            <dt class='title'>Контакты</dt>
            <dd class='item'>
              (812) 574 65 12
            </dd>
            <dd class='item'>
              (921) 976 38 76
            </dd>
            <dd class='item'>
              <a href='mailto:info@best-quest.ru'>info@best-quest.ru</a>
            </dd>
          </dl>
        </nav>
        <div class='createdby'>
          дизайн сайта<br/><strong><a href="http://formazon.com">formazon.com</a></strong>
        </div>
      </div>
    </footer>
